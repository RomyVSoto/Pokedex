<div class="row">
  <div class="col-12 col-sm-6 offset-sm-3">

    <div class="card">
      <div class="card-header bg-primary text-light">
        Formulario de Tipos
      </div>
      <div class="card-body">

        <form method="POST" action="/admin/{{#if editMode}}edit-type{{else}}add-tipo{{/if}}">
          <div class="mb-3">
            <label for="type" class="form-label">Type</label>
            <input type="text" {{#if editMode}} value="{{type.name}}" {{/if}} class="form-control" id="type" name="Name" />
          </div>
        {{#if editMode}}
          <input type="hidden" value="{{type.id}}" name="TypeId">
        {{/if}}

          <button type="submit" class="btn btn-primary float-end">Save</button>
           <a href="/admin/tipos" class="btn btn-warning float-end me-2">Back to list</a>
        </form>
      </div>
    </div>
  </div>
</div>